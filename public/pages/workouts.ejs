<div class="jumbotron text-center">
    <h3>{{ message }}</h3>
    <div class="ng-hide" ng-show="flag">

    <div class="row">
        <div class="col-md-8">

            <label>Search by intensity: <input type="number" ng-model="searchText.intensity" min="1" max="10"/><a class="clear" ng-click="searchText = null">
                    <span class="glyphicon glyphicon-remove"></span>
                </a></label>
            <br>
            <label>Search by workout type</label>
            <select ng-model="searchText.workouttype" id="workouttype">
                <option value="cardio">Cardio
                <option value="weights">Weights
                <option value="Other">Other
                <option value="">All</option>
            </select>
            <br>
            <div ng-controller="workoutsController as list">
                <table align="center" valign="middle">
                    <tr style="height:55px; font-size:20px; margin-left:20px; margin-right:20px; valign:middle"; >


                        <td>Workout Type</td>
                        <td>Date</td>
                        <td>Intensity</td>


                    <tbody ng-repeat="workout in workouts | filter:searchText">


                    <td>
                        <span style="height:55px; font-size:20px; margin-left:20px; margin-right:20px; valign:middle";>{{workout.workouttype}}</span>
                    </td>
                    <td>
                        <span style="height:55px; font-size:20px; margin-left:20px; margin-right:20px; valign:middle";>{{workout.date | date: 'yyyy-MM-dd'}}</span>
                    </td>

                    <td>
                        <span style="height:55px; font-size:20px; margin-left:20px; margin-right:20px; valign:middle";>{{workout.intensity}}</span>
                    </td>

                    <td>

                        <span style="height:55px; font-size:20px; margin-left:20px; margin-right:20px; valign:middle";>


                        <button type="button" class="btn btn-default" ng-click="delete(workout._id)">
                            <span class="glyphicon glyphicon-remove"></span> Remove
                        </button>
                        <button type="button" class="btn btn-default" ng-click="viewWorkout(workout)">
                                <span class="glyphicon glyphicon-edit"></span> View
                        </button>
                        </span>
                    </td>
                    </tr>
                    </tbody>
                </table>
            </div>
            <a href="#addworkout" style="color: black";>Add a workout</a>
        </div>
    </div>
    </div>
</div>
