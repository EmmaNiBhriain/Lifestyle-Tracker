<div class="jumbotron text-center" ng-controller="viewController">
    <!-- <h1>{{ message }}</h1> -->
    <h3>{{ message }}</h3>
    <div class="ng-hide" ng-show="flag">
    <div class="row">
        <div class="col-md-6 col-md-offset-5">
            <h3>Enter workout details</h3>
            <form ng-submit="updateWorkout()" style="margin-top:30px;">
                <div class="form-group">
                    <label for="workouttype">Workout Type</label>
                    <select ng-model="formData.workouttype" id="workouttype" class="form-control">
                        <option value="">{{workout.workouttype}}</option>
                        <option value="cardio">Cardio
                        <option value="weights">Weights
                        <option value="Other">Other
                    </select>
                </div>

                <div class="form-group">
                    <label for="time">Time</label>
                    <input class="form-control" type="time" ng-model="formData.time" id="time" placeholder="{{workout.time}}">
                </div>
                <div class="form-group">
                    <label class="control-label" for="date">Date</label>
                    <input class="form-control" id="date" ng-model="formData.date" placeholder="{{workout.date | date: 'yyyy-MM-dd'}}" type="date"/>
                </div>
                <div class="form-group">
                    <label for="duration">Duration (mins)</label>
                    <div class="input-group" id="duration">
                        <input type="number"
                               class="form-control"
                               placeholder="{{workout.duration}}"
                               ng-model="formData.duration"
                               ng-style="{'width': 100 + 'px'}"
                               min="1"> </input>
                    </div>
                </div>
                <div class="form-group">
                    <label for="intensity">Intensity</label>
                    <div class="input-group" id="intensity">
                        <input type="number"
                               class="form-control"
                               placeholder="{{workout.intensity}}"
                               ng-model="formData.intensity"
                               ng-style="{'width': 100 + 'px'}"
                               min="1" max="10"> </input>
                    </div>
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <textarea class="form-control" id="description" rows="3" ng-model="formData.description" placeholder="{{workout.description}}"></textarea>
                </div>

                <div class="button" type="btn btn-success">
                    <input type="submit" value="Update" >
                </div>
            </form>

        </div>
    </div>
</div>